<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.habitatapi.habit.RegisterPageTwoActivity"
    android:background="@mipmap/summer">



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/gridLayout">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/carbutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/carbutton"
                android:layout_row="2"
                android:layout_marginTop="30dp"
                android:layout_column="0"
                android:onClick="onClickCarButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/busbutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/busbutton"
                android:layout_row="2"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="30dp"
                android:layout_column="0"
                android:onClick="onClickBusButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/bikebutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/bikebutton"
                android:layout_row="2"
                android:layout_marginTop="230dp"
                android:layout_column="0"
                android:onClick="onClickBikeButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/personbutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/personbutton"
                android:layout_row="2"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="230dp"
                android:layout_column="0"
                android:onClick="onClickPersonButton" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select your modes of transport"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="0"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="27dp"
                android:textSize="18dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next_step_button"
                android:id="@+id/next_button_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:background="@drawable/green_button"
                android:radius="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_row="17"
                android:layout_column="0"
                android:enabled="false"
                android:onClick="onClickNext" />

        </GridLayout>


</RelativeLayout>
