<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.habitatapi.habit.RegisterPageTwoActivity"
    android:background="@mipmap/summer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="How do you travel?"
        android:id="@+id/textView"
        android:textStyle="bold"
        style="@style/ShadowStyle"
        android:layout_marginLeft="55dp"
        android:layout_gravity="center_horizontal"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/gridLayout"
            android:layout_marginTop="60dp">

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/carbutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/carbutton"
                android:layout_row="2"
                android:layout_marginTop="30dp"
                android:layout_column="0"
                android:onClick="onClickCarButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/busbutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/busbutton"
                android:layout_row="2"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="30dp"
                android:layout_column="0"
                android:onClick="onClickBusButton" />

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/motorcyclebutton"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="230dp"
                android:background="@mipmap/motorcyclebutton"
                android:onClick="onClickMotorcycleButton"/>

            <ImageButton
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/bikebutton"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@mipmap/bikebutton"
                android:layout_row="2"
                android:layout_marginTop="230dp"
                android:layout_column="0"
                android:onClick="onClickBikeButton"
                android:layout_marginLeft="155dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/next_step_button"
                android:id="@+id/next_button_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:background="@drawable/green_button"
                android:radius="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_row="17"
                android:layout_column="0"
                android:enabled="false"
                android:onClick="onClickNext" />

        </GridLayout>


</RelativeLayout>
